scroll-view::-webkit-scrollbar {
  display: none;
}

page {
  --statusBar: 0px;
  --homeIndicator: 0px;
  --navBar: 44px;
  --tabBar: 130rpx;

  --borderColor: #d5d5d5;
  --backgroundColor: #f6f4f9;
  --1px: 1rpx;
  --100vh: 100vh;
  --darkColor: #100D20;

  font-family: 'PingFang SC', -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

@supports (bottom: constant(safe-area-inset-bottom)) {
  page {
    --statusBar: constant(safe-area-inset-top);
    --homeIndicator: constant(safe-area-inset-bottom);
  }
}

@supports (bottom: env(safe-area-inset-bottom)) {
  page {
    --statusBar: env(safe-area-inset-top);
    --homeIndicator: env(safe-area-inset-bottom);
  }
}

.container {
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

button {
  border-radius: 0;
  border: none;
  margin: 0;
  background: transparent;
}

button::after {
  border-radius: 0;
  border: none;
}

.fix-iphonex-button {
  bottom: 68rpx !important;
}

.fix-iphonex-button::after {
  content: ' ';
  position: fixed;
  bottom: 0 !important;
  height: 68rpx !important;
  width: 100%;
  background: #fff;
}
.loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.loadmore {
  width: 65%;
  margin: 0.5em auto;
  line-height: 1.6em;
  font-size: 26rpx;
  text-align: center;
}

.loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  color: #3c3c3c;
}

.loadmore_line {
  border-top: 1rpx solid #e5e5e5;
  margin-top: 2em;
}
.loadmore_line .loadmore__tips {
  position: relative;
  top: -0.9em;
  padding: 0 0.55em;
  background-color: #f5f5f5;
  color: #999;
}


